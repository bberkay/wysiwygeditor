{
  "name": "@bberkay/wysiwygeditor",
  "version": "2.1.4",
  "description": "Simple, lightweight, easy to use and easy to customize WYSIWYG Editor. ",
  "main": "dist/wysiwygeditor.umd.js",
  "module": "dist/wysiwygeditor.es.js",
  "types": "dist/wysiwygeditor.d.ts",
  "scripts": {
    "build": "vite build && cp lib/index.d.ts dist/wysiwygeditor.d.ts",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/wysiwygeditor.es.js",
      "require": "./dist/wysiwygeditor.umd.js",
      "types": "./dist/wysiwygeditor.d.ts"
    }
  },
  "keywords": [
    "wysiwyg",
    "editor",
    "javascript"
  ],
  "files": [
    "/dist"
  ],
  "author": "Berkay Kaya <berkaykayaforbusiness@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bberkay/wysiwygeditor"
  },
  "homepage": "https://github.com/bberkay/wysiwygeditor",
  "devDependencies": {
    "vite": "^4.0.0",
    "vite-plugin-css-injected-by-js": "^1.0.0"
  }
}
